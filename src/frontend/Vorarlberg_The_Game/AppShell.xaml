<!-- 
    @file AppShell.xaml
    @brief Shell navigation container for the application
    @details Defines the main navigation structure of the application
             with the initial route set to MainPage
-->
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Game.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Game"
    Shell.FlyoutBehavior="Disabled"
    Title="Game">

    <!-- Main content shell with route to MainPage -->
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
