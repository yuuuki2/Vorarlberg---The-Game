<!-- 
    @file App.xaml
    @brief Main application XAML file that defines the application resources and styles
    @details This file contains the root Application element and defines the global resources
             and styles used throughout the application. It merges resource dictionaries
             for colors and styles from separate files.
-->
<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Game"
             x:Class="Game.App">
    <!-- Application resources including colors and styles -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
